<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.ui.GameController"
            style="-fx-background-color: #f5f5f5;">

    <!-- Top: Game info -->
    <top>
        <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15;">
            <HBox spacing="30" alignment="CENTER_LEFT">
                <Label fx:id="roundLabel" text="Round 1" 
                       style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Label fx:id="roleLabel" text="Waiting..." 
                       style="-fx-font-size: 18px;"/>
                <Label fx:id="scoreLabel" text="Your Score: 0" 
                       style="-fx-font-size: 18px; -fx-text-fill: #4CAF50; -fx-font-weight: bold;"/>
            </HBox>
            
            <!-- Word to draw (only visible for drawer) -->
            <Label fx:id="wordLabel" text="Draw: apple" visible="false"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2196F3;"/>
        </VBox>
    </top>

    <!-- Center: Canvas for drawing -->
    <center>
        <StackPane style="-fx-padding: 20;">
            <Canvas fx:id="drawingCanvas" width="700" height="500" 
                    style="-fx-border-color: #333; -fx-border-width: 2; -fx-background-color: white;"/>
        </StackPane>
    </center>

    <!-- Right: Chat/Guesses -->
    <right>
        <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: white;">
            <Label text="Game Chat" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <ListView fx:id="guessListView" prefWidth="250" prefHeight="500"
                      style="-fx-border-color: #ddd;"/>
        </VBox>
    </right>

    <!-- Bottom: Guess input -->
    <bottom>
        <HBox spacing="10" style="-fx-padding: 15; -fx-background-color: white;">
            <TextField fx:id="guessField" promptText="Type your guess here..." 
                       HBox.hgrow="ALWAYS"
                       style="-fx-font-size: 14px;"/>
            <Button text="Send Guess" fx:id="sendGuessButton"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"/>
        </HBox>
    </bottom>

</BorderPane>