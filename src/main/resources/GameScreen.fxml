<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.canvas.Canvas?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="client.ui.GameController"
            style="-fx-background-color: #f0f3f7;">

    <!-- TOP BAR -->
    <top>
        <VBox spacing="10" style="-fx-padding: 20;">
            <HBox spacing="40" alignment="CENTER_LEFT">
                <Label fx:id="roundLabel" text="Round 1"
                       style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #222;" />

                <Label fx:id="roleLabel" text="Connecting..."
                       style="-fx-font-size: 18px; -fx-text-fill: #555;" />

                <Label fx:id="scoreLabel" text="Score: 0"
                       style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2E7D32;" />
            </HBox>

            <Label fx:id="wordLabel" text="Draw: apple" visible="false"
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #1565C0;" />
        </VBox>
    </top>

    <!-- CENTER: Canvas -->
    <center>
        <StackPane style="-fx-padding: 20;">
            <Pane style="-fx-border-color: #333; -fx-border-width: 4; -fx-border-radius: 12; -fx-background-radius: 12; -fx-background-color: white;">
                <Canvas fx:id="drawingCanvas" width="700" height="500"/>
            </Pane>
        </StackPane>
    </center>

    <!-- RIGHT PANEL: Guesses/Chat -->
    <right>
        <VBox spacing="12" style="-fx-padding: 20; -fx-background-color: white; -fx-border-color: #333; -fx-border-width: 3; -fx-border-radius: 10;" prefWidth="270">
            <Label text="Game Chat" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" />
            <ListView fx:id="guessListView" prefHeight="500" style="-fx-border-color: #333; -fx-border-width: 2;"/>
        </VBox>
    </right>

    <!-- BOTTOM: Guess Input -->
    <bottom>
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #333; -fx-border-width: 2; -fx-border-radius: 10;">
            
            <TextField fx:id="guessField"
                       promptText="Type your guess..."
                       HBox.hgrow="ALWAYS"
                       style="-fx-font-size: 14px; -fx-border-radius: 10; -fx-background-radius: 10;" />

            <Button fx:id="sendGuessButton" text="Send"
                    style="-fx-background-color: #1565C0; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10;" />
        </HBox>
    </bottom>

</BorderPane>
